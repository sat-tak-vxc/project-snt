<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>formula_InputTaxRateText</name>
        <dataType>String</dataType>
        <expression>CASE(LEN(TEXT({!var_CalculateDetail.TaxRate__c})),
4,RIGHT(TEXT({!var_CalculateDetail.TaxRate__c}),2),
3,RIGHT(TEXT({!var_CalculateDetail.TaxRate__c}),1),
&quot;0&quot;
)</expression>
    </formulas>
    <formulas>
        <name>formula_InputTaxRateValue</name>
        <dataType>Number</dataType>
        <expression>VALUE({!formula_InputTaxRateText})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>formula_TaxRate</name>
        <dataType>Number</dataType>
        <expression>{!var_BorrowerPay}* {!formula_InputTaxRateValue} / 100</expression>
        <scale>0</scale>
    </formulas>
