<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DoNotChangeIsDecisionApplicationField</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   NOT( ISNEW() ),
   ISCHANGED(  IsDecisionApplicationField__c  )
)</errorConditionFormula>
    <errorDisplayField>IsDecisionApplicationField__c</errorDisplayField>
    <errorMessage>決裁申請は変更できません。新しくレコードを作成してください。</errorMessage>
</ValidationRule>
